<h1> Create a new article</h1>


    <%# Comment START %>
        <%# form_with scope: <model>, url: <url to redirect to>,%>
        <%# <specify to submit form using http by "local: true"> %>
    <%# Comment END %>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>
    
    <p>
        <%= f.label :description %> </br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %>
    </p>

<% end %>